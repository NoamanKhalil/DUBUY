

    import React from "react";
import { Formik } from "formik";

function AppForm({ initialValues, onSubmit, myScheme, children }) {
  return (
    <Formik
      initialValues={initialValues}
      onSubmit={onSubmit}
      validationSchema={myScheme}
    >
      {children}
    </Formik>
  );
}

export default AppForm;


